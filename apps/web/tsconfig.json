{
  "extends": "@repo/typescript-config/nextjs.json",
  "compilerOptions": {
    "plugins": [{ "name": "next" }],
    "paths": {
      "@components/*": ["./src/components/*"],
      "@/*": ["./src/*"]
    },
    "downlevelIteration": true
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "src/utils/merkleTree.ts"
  ],
  "exclude": ["node_modules"]
}
